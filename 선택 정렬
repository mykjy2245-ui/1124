#include <iostream>
#include <vector>
using namespace std;

// 선택 정렬: 매 단계에서 가장 작은 값을 선택하여 앞으로 가져오기
void selectionSort(vector<int>& arr) {
    int n = arr.size();

    // i번째 위치에 올 최솟값을 선택
    for (int i = 0; i < n - 1; i++) {
        int minIdx = i; // 현재 구간의 최솟값 index

        // i 이후의 요소들 중 최솟값 찾기
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIdx]) {
                minIdx = j;
            }
        }

        // 찾은 최솟값을 i번째와 교환
        swap(arr[i], arr[minIdx]);
    }
}

int main() {
    vector<int> arr = {64, 25, 12, 22, 11};
    selectionSort(arr);

    for (int x : arr) cout << x << " ";
    return 0;
}
