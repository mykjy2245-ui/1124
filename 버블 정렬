#include <iostream>
#include <vector>
using namespace std;

// 버블 정렬: 옆에 있는 값과 비교해서 큰 값을 뒤로 보내는 방식
void bubbleSort(vector<int>& arr) {
    int n = arr.size();

    // 전체를 n-1번 반복
    for (int i = 0; i < n - 1; i++) {
        // 매 단계마다 맨 뒤에 가장 큰 값이 정렬됨
        for (int j = 0; j < n - i - 1; j++) {
            // 앞의 값이 뒤보다 크면 swap
            if (arr[j] > arr[j + 1]) {
                swap(arr[j], arr[j + 1]);
            }
        }
    }
}

int main() {
    vector<int> arr = {5, 1, 4, 2, 8};
    bubbleSort(arr);

    for (int x : arr) cout << x << " ";
    return 0;
}
