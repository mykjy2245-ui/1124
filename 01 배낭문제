#include <iostream>
#include <vector>
using namespace std;

// 배낭 문제를 1차원 DP로 해결
int knapsack(vector<int> weight, vector<int> value, int W) {
    int n = weight.size();

    // 무게 w를 사용했을 때 얻을 수 있는 최대 가치
    vector<int> dp(W + 1, 0);

    // 모든 물건을 하나씩 확인
    for (int i = 0; i < n; i++) {
        // 1차원 DP는 뒤에서 앞으로 순회해야 겹치는 계산을 피함
        for (int w = W; w >= weight[i]; w--) {
            // 현재 물건을 넣지 않을 때 vs 넣을 때 비교
            dp[w] = max(dp[w], dp[w - weight[i]] + value[i]);
        }
    }
    return dp[W];
}

int main() {
    vector<int> weight = {2, 3, 4, 5};
    vector<int> value = {3, 4, 5, 6};
    int W = 5;

    cout << "최대 가치: " << knapsack(weight, value, W) << endl;
    return 0;
}
